---
import { Icon } from 'astro-icon';

interface Props {
  icon: string;
  label: string;
  link: string;
}

const { icon, label, link } = Astro.props;

const { pathname } = Astro.url;
const isActive = link !== '/' ? pathname.includes(link) : pathname === link;
---

<li>
  <a
    href={link}
    aria-label={label}
    class:list={[
      'flex gap-x-4 px-4 py-2 font-extrabold rounded-lg items-center cursor-pointer hover:border-teal-950 hover:text-teal-400 hover:font-extrabold',
      { 'text-teal-400': isActive },
    ]}
  >
    <Icon name={icon} class="w-5" />
    <div class="text-lg">{label}</div>
  </a>
</li>
