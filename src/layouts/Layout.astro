---
import Navbar from '@components/navbar/Navbar.astro';
import { SEO } from 'astro-seo';

interface Props {
  title: string;
}

const { title } = Astro.props;

import '../styles.css';
---

<!DOCTYPE html>
<html lang="en" style="font-size: 16px">
  <head>
    <SEO
      description="Alper Kantarci, alperk, full-stack developer, web development, software developer, dev"
      openGraph={{
        basic: {
          title: 'Alper Kantarci',
          type: 'Full-Stack Developer',
          image: 'https://avatars.githubusercontent.com/u/16183134?v=4',
        },
      }}
      twitter={{
        creator: '@alper_kantarci',
      }}
      extend={{
        // extending the default link tags
        link: [
          {
            rel: 'icon',
            href: 'data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ðŸ’»</text></svg>',
          },
        ],
        // extending the default meta tags
        meta: [
          {
            name: 'twitter:image',
            content: 'https://avatars.githubusercontent.com/u/16183134?v=4',
          },
          { name: 'twitter:title', content: 'Alper Kantarci' },
          { name: 'twitter:description', content: 'Full-Stack Developer' },
        ],
      }}
      noindex={false}
      charset={'utf-8'}
    />

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

