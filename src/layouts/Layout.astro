---
import Navbar from "@components/navbar/Navbar.astro";
import { SEO } from "astro-seo";

interface Props {
  title: string;
}

const { title } = Astro.props;

import "../styles.css";
---

<!doctype html>
<html lang="en" style="font-size: 16px">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />

    <SEO
      description="Alper Kantarci, alperk, full-stack developer, web development, software developer, dev"
      openGraph={{
        basic: {
          title: "Alper Kantarci",
          type: "Full-Stack Developer",
          image: "https://avatars.githubusercontent.com/u/16183134?v=4",
        },
      }}
      twitter={{
        creator: "@alper_kantarci",
      }}
      extend={{
        // extending the default link tags
        link: [
          {
            rel: "icon",
            href: "favicon.ico",
          },
        ],
        // extending the default meta tags
        meta: [
          {
            name: "twitter:image",
            content: "https://avatars.githubusercontent.com/u/16183134?v=4",
          },
          { name: "twitter:title", content: "Alper Kantarci" },
          { name: "twitter:description", content: "Full-Stack Developer" },
        ],
      }}
      noindex={false}
      charset={"utf-8"}
    />

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title} - alperk</title>
  </head>
  <body
    class="flex flex-row h-screen bg-zinc-950 bg-opacity-95 font-nunito text-zinc-200"
  >
    <Navbar />
    <main class="flex-auto overflow-y-auto scrollbar pt-8 pb-24 lg:pb-10">
      <slot />
    </main>
  </body>
</html>
