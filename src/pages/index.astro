---
import Layout from '@layouts/Layout.astro';
import WorkCard from '@components/home/WorkCard.astro';
import { Icon } from 'astro-icon';

import { github, linkedin, youtube, mailto } from 'src/constants/social-links';
import companies from 'src/constants/work-info';
---

<meta name="description" content="alperk.dev, Alper Kantarci, full-stack developer with 6 years of experience based in Prizren, Kosovo." />

<Layout title="Home">
  <div class="mx-auto px-6 md:px-12 lg:max-w-4xl">
    <h2 class="text-3xl font-bold">Hey, I'm Alper ðŸ‘‹,</h2>
    <h2 class="text-3xl font-bold mb-14">a full-stack developer with 6 years of experience.</h2>

    <div class="text-xl mb-12">
      <p>
        Iâ€™m a full-stack <a href={github} target="_blank" class="text-teal-300" aria-label="github">developer</a> based in Prizren, Kosovo.
      </p>
      <p>I love design and code.</p>
      <br />
      <p>
        I love making <a href={youtube} target="_blank" class="text-teal-300" aria-label="youtube">music</a>. I'm a person who is very
        interested and enthusiastic about music production. I appreciate the subtleties and nuances of music. I value and use technology
        that allows me to delve deeper into sound and audio.
      </p>
    </div>

    <div class="flex flex-wrap gap-3 text-xl mb-16 items-center text-teal-100">
      <a href={mailto} class="border-teal-900 border-2 rounded-full px-5 py-2" aria-label="mail">Contact me</a>
      <a href={github} target="_blank" class="rounded-full border-2 p-3 border-teal-900" aria-label="github">
        <Icon name="mdi:github" class="w-5" />
      </a>
      <a href={linkedin} target="_blank" class="rounded-full border-2 p-3 border-teal-900" aria-label="linkedin">
        <Icon name="mdi:linkedin" class="w-5" />
      </a>
    </div>

    <h3 class="text-2xl font-bold mb-12">Work</h3>
    <div class="text-xl flex flex-col gap-6">
      {
        companies.map((company) => {
          return (
            <WorkCard
              name={company.name}
              position={company.position}
              link={company.link}
              date={company.date}
              techStackIcons={company.techStackIcons}
            />
          );
        })
      }
    </div>
  </div>
</Layout>
