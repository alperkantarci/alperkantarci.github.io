---
import Layout from "@layouts/Layout.astro";
import WorkCard from "@components/home/WorkCard.astro";
import { Icon } from "astro-icon";

import { github, linkedin, youtube, mailto } from "src/constants/social-links";
import companies from "src/constants/work-info";
---

<Layout title="Home">
  <div class="mx-auto px-6 md:px-12 lg:max-w-4xl">
    <h2 class="text-4xl font-bold underline mt-6 mb-8">Hey, I'm Alper ðŸ‘‹,</h2>

    <p class="text-xl text-zinc-300">
      Full-stack developer based in Prizren, Kosovo. ðŸ‡½ðŸ‡°
    </p>

    <p class="text-xl text-zinc-300 mb-6">
      I specialize in <span class="text-teal-400">web development</span>, but I
      enjoy coding anything that brings ideas to life.
    </p>

    <p class="text-xl text-zinc-300 mb-16">
      I love making <a
        href={youtube}
        target="_blank"
        class="text-teal-300 underline"
        aria-label="youtube">music</a
      >, deeply interested and enthusiastic about music production. Subtleties
      and nuances of music captivate me, and I use technology to further explore
      sound and audio.
    </p>

    <div class="flex flex-wrap gap-3 text-xl mb-16 items-center text-teal-100">
      <a
        href={mailto}
        class="border-teal-900 border-2 rounded-full px-5 py-2 hover:border-teal-500"
        aria-label="mail">Contact me</a
      >
      <a
        href={github}
        target="_blank"
        class="rounded-full border-2 p-3 border-teal-900 hover:border-teal-500"
        aria-label="github"
      >
        <Icon name="mdi:github" class="w-5" />
      </a>
      <a
        href={linkedin}
        target="_blank"
        class="rounded-full border-2 p-3 border-teal-900 hover:border-teal-500"
        aria-label="linkedin"
      >
        <Icon name="mdi:linkedin" class="w-5" />
      </a>
    </div>

    <h3 class="text-2xl font-bold mb-12">Work</h3>
    <div class="text-xl flex flex-col gap-6">
      {
        companies.map((company) => {
          return (
            <WorkCard
              name={company.name}
              position={company.position}
              link={company.link}
              date={company.date}
              techStackIcons={company.techStackIcons}
            />
          );
        })
      }
    </div>
  </div>
</Layout>
